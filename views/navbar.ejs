<style>
  .profile-image {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    overflow: hidden;
    background-color: #000;
  }

  .profile-image img {
    width: 100%;
    height: 100%;
  }
</style>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">The New IMDB</a>
    </div>
    <ul class="nav navbar-nav">

      <% if(user){%>
      <li><a href="/logout">Logout</a></li>
      <%}%>

    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li>
        <form
          action="/search?source=hp"
          method="post"
          id="search-form"
          class="form-inline"
        >
          <div class="form-group">
            <select name="cat" class="form-control" id="cat">
              <option value="movie">Movie Title</option>
              <option value="person">Actor</option>
            </select>
          </div>

          <input
            type="text"
            id="movie"
            placeholder="Search"
            name="movieSearch"
          />

          <input type="submit" class="btn btn-primary" /> &nbsp;

          <div class="profile-image pull-right">
            <img src="<%= user.image %>" title="<%=user.name%>" alt="Faheem" />
          </div>
        
        
        </form>
      </li>
    </ul>
  </div>
</nav>
